<%= form_for @event do |f| %>
  <div class="form-group">
    <label>Name : </label>
    <%= f.text_field :name, placeholder: "insert name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Description</label>
    <%= f.text_area :description, rows: 5, placeholder: "Say something about your place", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Location : </label>
    <%= f.text_field :location, placeholder: "insert location", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Price : </label>
    <%= f.text_field :price,  class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Capacity</label>
    <%= f.select :capacity, (0..100), prompt: "Select number of people", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Year : </label>
    <%= f.select :capacity, (2018..2022), prompt: "Year", class: "form-control" %>
    <label>Month : </label>
    <%= f.select :capacity, (1..12), prompt: "Month", class: "form-control" %>
    <label>Date : </label>
    <%= f.select :capacity, (1..31), prompt: "Date", class: "form-control" %>
  </div>



  <label>Amenities</label>

  <div class="form-group">
    <%= f.check_box :includes_food %> Food included
  </div>
  <div class="form-group">
    <%= f.check_box :includes_drinks %> Drinks included
  </div>


  <label>Amenities</label>

  <div class="form-group">
    <%= f.check_box :active %> active
  </div>


  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
