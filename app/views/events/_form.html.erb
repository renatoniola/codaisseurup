<%= form_for @event, html: { multipart: true } do |f| %>

  <div class="form-group">
    <label>Name : </label>
    <%= f.text_field :name, placeholder: "insert name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Description</label>
    <%= f.text_area :description, rows: 5, placeholder: "Say something about your place", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Location : </label>
    <%= f.text_field :location, placeholder: "insert location", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Price : </label>
    <%= f.text_field :price,  class: "form-control" %>
  </div>



  <div class="form-group">
    <label>Capacity</label>
    <%= f.select :capacity, (0..100),  class: "form-control" %>
  </div>

  <div class="form-group container">


    <div class="col-xs-5 code_datepicker">
      <label>Start date</label>
      <div class="input-group date" id="datetimepickerStart">

      <%= f.text_field :starts_at,  class: 'form-control', data: { date_format: 'YYYY/MM/DD hh:mm:ss'} %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
    </div>
      </div>

    <div class="col-xs-5 code_datepicker">
      <label>End date</label>
      <div class="input-group date" id="datetimepickerEnd">

      <%= f.text_field :ends_at,  class: 'form-control', data: { date_format: 'YYYY/MM/DD hh:mm:ss'} %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
    </div>
      </div>

  </div>


  <label>Amenities</label>

  <div class="container">
    <div class="form-group  col-xs-4">
      <%= f.check_box :includes_food %> Food included
    </div>
    <div class="form-group  col-xs-4">
      <%= f.check_box :includes_drinks %> Drinks included
    </div>
  </div>

  <label>Categories</label>

  <div class="container">
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
      <div class="form-group col-xs-4">
        <%= b.check_box(class: "check_box") %> <%= b.object.name %>
      </div>
    <% end %>
  </div>

  <label>Status</label>

  <div class="form-group">
    <%= f.check_box :active %> active
  </div>

  <label>Photos</label>

  <div class="form-group">
    <span class="btn btn-default">
      Upload Photos
      <%= file_field_tag "images[]", type: :file, multiple: true %>
    </span>
  </div>

  <div id="photos">
    <%= render 'photos/list' %>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
