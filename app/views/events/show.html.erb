<div class="container container-mod">
  <div class="panel panel-primary">
    <div class="panel-heading"><%= @event.name %></div>

    <div class="panel-body">




      <!-- Main Info -->
      <h2><%= @event.name %></h2>
      <p><%= @event.description %></p>
      <p>Host: <%= @event.user.email %></p>
      <hr></hr>

      <!-- About -->
      <h4>Location : <%= @event.location %></h4>

      <p><h4>Start date :<span class="side_text"> <%= @event.starts_at %></span></h4></p>
      <p><h4>End date : <span class="side_text"><%= @event.ends_at %></span></h4> </p>
          <hr></hr>
      <!-- Amenities -->
      <h4>Amenities</h4>
      <ul class="amenities">
        <li><%= !@event.includes_food ? ("<s>Food</s>").html_safe : "food" %></li>
        <li><%= !@event.includes_drinks ? ("<s>Drinks</s>").html_safe : "drinks" %></li>

      </ul>
      <hr></hr>
      <h4>Categories</h4>
      <% @categories.each do |category| %>
        <span class="label label-success"><%= category.name %></span>
      <% end %>

  

       <h4>Photos</h4>
        <% @event.photos.each do |photo| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <%= image_tag photo.image.thumbnail %>
          </div>
        </div>
        <% end %>
    </div>

  </div>

  <%= link_to "Back", events_path, class: "btn btn-default" %>
</div>
